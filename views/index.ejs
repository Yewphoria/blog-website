<%- include("header.ejs") %> 
<img
      src="images/blog-banner1.jpg"
      alt="blog"
      style="width: 100%; height: 500px; object-fit: cover"
    />
<div class="web-container">
<% if(locals.postsDatabase &&
locals.postsDatabase.length > 0) { %> <% for(var i= postsDatabase.length-1;i>=0
; i--){ %>



<div class="container index-post-container ">
  <div class="row">
    <div class="col-7 image-container">
      <h3>Image PlaceHolder</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <p class= roboto-bold><%= postsDatabase[i].title %></p>
      <p class= roboto-regular><%= postsDatabase[i].content %></p>
      
      <p class= roboto-regular style="text-align:right"> Posted on <%= postsDatabase[i].date %></p>
      <div class=button-container>
          <form action="/info/<%=i%>" method="get">
            <button type="submit" class="clickMore float-right">Click more </button>
            </form>
      </div>
    </div>
  </div>
</div>

<% } } else { %>
<div
  style="
    height: 80vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  "
>
  <h3>No posts to display</h3>
</div>

<%}%>
</div>
</body>
